<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#42b6f4"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/tv_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/iv_help"
            android:text="خوش آمدید"
            android:textColor="#000000"
            android:textSize="30dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_audio"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="2"
        tools:context="com.dapperapps.ciandroid.SplashActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/btn_today"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/square_transparent_black_border_background"
                android:gravity="center"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iv_daily_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_daily_update" />

                <Button
                    android:id="@+id/btn_daily_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_daily_update"
                    android:background="@null"
                    android:text="آج کا موسم"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/audio_daily"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/btn_daily_update"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_audio" />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_weight="0.05"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/btn_weekly"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/square_transparent_black_border_background"
                android:gravity="center"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iv_weekly_update"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_weekly_update" />

                <Button
                    android:id="@+id/btn_btn_weekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_weekly_update"
                    android:background="@null"
                    android:text="ہفتہ وار موسم"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/audio_weekly"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/btn_btn_weekly"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_audio" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/btn_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/square_transparent_black_border_background"
                android:gravity="center"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_setting_update" />

                <Button
                    android:id="@+id/btn_btn_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_setting"
                    android:background="@null"
                    android:text="انتخاب کریں"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/audio_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/btn_btn_setting"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_audio" />
            </RelativeLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="0.05"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:id="@+id/btn_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:background="@drawable/square_transparent_black_border_background"
                android:gravity="center"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/iv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_phone_setting" />

                <Button
                    android:id="@+id/btn_btn_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_phone_number"
                    android:background="@null"
                    android:text="موبائل نمبر"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/audio_phone_number"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/btn_btn_phone_number"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_audio" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>